@model IEnumerable<Inventory.Models.Shipper>

@{
    ViewBag.Title = "Shipper";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var grid = new WebGrid(source: Model,
                                    rowsPerPage: 5,
                                    canPage: true,
                                    canSort: true);



}

<h2>Shipper</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@grid.GetHtml(tableStyle:"table", columns:
                    grid.Columns(
                           grid.Column("ShipperName", "Shipper Name"),
                           grid.Column("Phone", "Phone"),
                           grid.Column("ActiveYN", "Status"),
                           grid.Column(header: "", format: @<text><a href="@Url.Action("Edit", new { id = item.ShipperID })">Edit</a></text>)

                    ), mode: WebGridPagerModes.Numeric)